    <script>
      function playSound(soundFile) {
        const audio = new Audio(soundFile);
        audio.play();
        console.log(soundFile);
      }

      const homeLink = document.querySelector('.nav-linkHome');
      const quizLink = document.querySelector('.nav-linkQuizzes');
      const resultLink = document.querySelector('.nav-linkResults');
      const homeSound = new Audio("/media/navBtns.mp3");
      const quizSound = new Audio("/media/navBtns.mp3");
      const resultSound = new Audio("/media/navBtns.mp3");

      homeLink.addEventListener('click', function() {
        playSound(homeSound);
      });

      quizLink.addEventListener('click', function(event) {
        event.preventDefault();
        quizSound.play();
        setTimeout(() => {
          window.location.href = event.target.getAttribute('href');
        }, 325);
      });

      resultLink.addEventListener('click', function(event) {
        event.preventDefault();
        resultSound.play();
        setTimeout(() => {
          window.location.href = event.target.getAttribute('href');
        }, 325);
      });
    </script>
