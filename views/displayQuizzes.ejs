<!DOCTYPE html>
<html lang="en">
<head>
  <title>Quizzes</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Bungee&family=Source+Sans+Pro:wght@300;600&display=swap"
    rel="stylesheet" />

  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
</head>

<body>
  <h1>Quizzes</h1>
  <div id="quizList"></div>

  <script>
    // Fetch the quizzes when the page is loaded
    $(document).ready(function() {
      $.ajax({
        type: 'POST',
        url: '/displayQuizzes',
        success: function(data) {
          const quizListElement = $('<ul></ul>');
          data.quizzes.forEach(function (quiz) {
            const quizItem = $('<li></li>').text(quiz.title);
            quizListElement.append(quizItem);
          });
          $('#quizList').html(quizListElement);
        },
        error: function(error) {
          console.error(error);
        }
      });
    });
  </script>
</body>
</html>
