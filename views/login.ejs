<script>
  const blastSound = new Audio("/media/blastSound.mp3");
  const loginForm = document.getElementById("loginForm")
  loginForm.addEventListener("submit", function(event) {
    event.preventDefault();
    blastSound.play();
    blastSound.onended = function() {
      loginForm.submit();
    }
  })
</script>
